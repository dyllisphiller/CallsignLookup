<Page
    x:Class="Hammer.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:fi="using:Fluent.Icons"
    xmlns:local="using:Hammer.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock x:Name="SettingsPage_Header" Style="{ThemeResource HeaderTextBlockStyle}"/>

            <ToggleSwitch Header="Keep search history" x:Name="KeepSearchHistory" Toggled="KeepSearchHistory_Toggled"/>
        </StackPanel>
    </Grid>
</Page>

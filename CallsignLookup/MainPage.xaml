<Page
    x:Class="CallsignLookup.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CallsignLookup"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox x:Name="CallsignTextBox" HorizontalAlignment="Left" Margin="64,48,0,0" Text="KOPB" VerticalAlignment="Top" Width="192" TextChanged="CallsignTextBox_TextChanged"/>
        <Button x:Name="SearchButton" Content="Search for amateur callsign" Margin="64,85,0,0" VerticalAlignment="Top" Click="SearchButton_Click"/>
        <TextBlock x:Name="LookupResultTextBlock" HorizontalAlignment="Left" Margin="320,48,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="480" Width="640"/>

    </Grid>
</Page>
